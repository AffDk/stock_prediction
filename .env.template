# Environment variables for stock prediction system
# Copy this file to .env and fill in your actual values

# API Keys
NEWS_API_KEY=your_newsapi_key_here
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here  # Optional backup

# GCP Configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_BUCKET_NAME=your_gcs_bucket_name
GOOGLE_APPLICATION_CREDENTIALS=gcp-credentials.json

# Database Configuration (if using)
DATABASE_URL=sqlite:///data/stock_prediction.db

# Model Configuration
MODEL_NAME=stock_prediction_v1
FINBERT_MODEL=ProsusAI/finbert

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# Data Collection Settings
START_DATE=2024-09-01
END_DATE=2025-08-31
PREDICTION_HORIZON_DAYS=7
NEWS_LOOKBACK_DAYS=7

# Stock Symbols (comma-separated)
STOCK_SYMBOLS=AAPL,GOOGL,MSFT,TSLA,NVDA,META,AMZN,NFLX,CRM,ADBE

# Training Configuration
BATCH_SIZE=32
EPOCHS=20
LEARNING_RATE=0.001
TRAIN_TEST_SPLIT=0.8

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/stock_prediction.log